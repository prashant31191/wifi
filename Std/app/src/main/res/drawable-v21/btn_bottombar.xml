<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@color/btnDarkRipple">
    <item>
        <selector>
            <item android:drawable="@color/primary_dark" android:state_enabled="false">
               <nine-patch android:src="@drawable/btn_bottombar_normal" />
            </item>
            <item android:drawable="@color/primary" >
                 <nine-patch
                    android:src="@drawable/btn_bottombar_disable"
                    android:alpha="?android:attr/disabledAlpha" />
                
            </item>
        </selector>
    </item>
</ripple>
